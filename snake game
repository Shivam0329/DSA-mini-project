#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <unistd.h>
#include <termios.h>
#include <fcntl.h>

#define WIDTH 20
#define HEIGHT 20
#define INITIAL_LENGTH 3

int x, y, fruitX, fruitY, bonusX = -1, bonusY = -1;
int score, length, gameOver;
int tailX[100], tailY[100];
int difficulty;
int bonusTimer = 0;

// Power-up positions and timers
int powerUpX = -1, powerUpY = -1;
int powerUpType = 0;
int powerUpTimer = 0;

// Power-up effects
int speedBoost = 0;
int slowMotion = 0;
int scoreMultiplier = 0;

enum Direction { STOP = 0, LEFT, RIGHT, UP, DOWN };
enum Direction dir;

void clearScreen() { printf("\033[H"); }
void hideCursor() { printf("\033[?25l"); }
void showCursor() { printf("\033[?25h"); }

void welcomeScreen() {
    clearScreen();
    printf("==== SNAKE GAME ====\n\n");
    printf("Controls:\n");
    printf("  W - Up\n");
    printf("  S - Down\n");
    printf("  A - Left\n");
    printf("  D - Right\n");
    printf("  X - Exit\n\n");
    printf("Power-Ups:\n");
    printf("  ‚ö° Speed Boost\n  üê¢ Slow Motion\n  ‚≠ê Score Multiplier\n\n");
    printf("Press ENTER to continue...");
    getchar();
}

void selectDifficulty() {
    clearScreen();
    printf("Select Difficulty:\n");
    printf("1. Easy\n2. Medium\n3. Hard\nChoice: ");
    scanf("%d", &difficulty);
    getchar();
}

void setup() {
    dir = RIGHT;
    x = WIDTH / 2;
    y = HEIGHT / 2;
    fruitX = rand() % WIDTH;
    fruitY = rand() % HEIGHT;
    score = 0;
    length = INITIAL_LENGTH;
    gameOver = 0;
    speedBoost = slowMotion = scoreMultiplier = 0;
}

void placeFruit() {
    int valid = 0;
    while (!valid) {
        fruitX = rand() % WIDTH;
        fruitY = rand() % HEIGHT;
        valid = 1;
        for (int i = 0; i < length; i++) {
            if (fruitX == tailX[i] && fruitY == tailY[i]) {
                valid = 0;
                break;
            }
        }
    }
}

void spawnBonusFruit() {
    if (bonusX == -1 && rand() % 15 == 0) {
        bonusX = rand() % WIDTH;
        bonusY = rand() % HEIGHT;
        bonusTimer = 10;
    }
}

void spawnPowerUp() {
    if (powerUpX == -1 && rand() % 20 == 0) {
        powerUpX = rand() % WIDTH;
        powerUpY = rand() % HEIGHT;
        powerUpType = rand() % 3 + 1;
        powerUpTimer = 20;
    }
}

int kbhit() {
    struct termios oldt, newt;
    int ch;
    int oldf;

    tcgetattr(STDIN_FILENO, &oldt);
    newt = oldt;
    newt.c_lflag &= ~(ICANON | ECHO);
    tcsetattr(STDIN_FILENO, TCSANOW, &newt);
    oldf = fcntl(STDIN_FILENO, F_GETFL, 0);
    fcntl(STDIN_FILENO, F_SETFL, oldf | O_NONBLOCK);

    ch = getchar();
    tcsetattr(STDIN_FILENO, TCSANOW, &oldt);
    fcntl(STDIN_FILENO, F_SETFL, oldf);

    if (ch != EOF) {
        ungetc(ch, stdin);
        return 1;
    }
    return 0;
}

void input() {
    if (kbhit()) {
        char c = getchar();
        switch (c) {
            case 'a': if (dir != RIGHT) dir = LEFT; break;
            case 'd': if (dir != LEFT) dir = RIGHT; break;
            case 'w': if (dir != DOWN) dir = UP; break;
            case 's': if (dir != UP) dir = DOWN; break;
            case 'x': gameOver = 1; break;
        }
    }
}

void draw() {
    clearScreen();
    for (int i = 0; i < WIDTH + 2; i++) printf("#");
    printf("\n");

    for (int i = 0; i < HEIGHT; i++) {
        for (int j = 0; j < WIDTH; j++) {
            if (j == 0) printf("#");

            if (i == y && j == x)
                printf("\033[1;32mO\033[0m");
            else if (i == fruitY && j == fruitX)
                printf("üçé");
            else if (i == bonusY && j == bonusX)
                printf("üíé");
            else if (i == powerUpY && j == powerUpX) {
                if (powerUpType == 1) printf("‚ö°");
                else if (powerUpType == 2) printf("üê¢");
                else if (powerUpType == 3) printf("‚≠ê");
            } else {
                int printed = 0;
                for (int k = 0; k < length; k++) {
                    if (tailX[k] == j && tailY[k] == i) {
                        printf("\033[1;32mo\033[0m");
                        printed = 1;
                        break;
                    }
                }
                if (!printed) printf(" ");
            }

            if (j == WIDTH - 1) printf("#");
        }
        printf("\n");
    }

    for (int i = 0; i < WIDTH + 2; i++) printf("#");
    printf("\nScore: %d\n", score);
}

void logic() {
    int prevX = tailX[0];
    int prevY = tailY[0];
    tailX[0] = x;
    tailY[0] = y;

    for (int i = 1; i < length; i++) {
        int tmpX = tailX[i];
        int tmpY = tailY[i];
        tailX[i] = prevX;
        tailY[i] = prevY;
        prevX = tmpX;
        prevY = tmpY;
    }

    switch (dir) {
        case LEFT: x--; break;
        case RIGHT: x++; break;
        case UP: y--; break;
        case DOWN: y++; break;
    }

    if (x >= WIDTH) x = 0; else if (x < 0) x = WIDTH - 1;
    if (y >= HEIGHT) y = 0; else if (y < 0) y = HEIGHT - 1;

    for (int i = 0; i < length; i++) {
        if (tailX[i] == x && tailY[i] == y) {
            gameOver = 1;
        }
    }

    if (x == fruitX && y == fruitY) {
        score += (scoreMultiplier ? 20 : 10);
        length++;
        placeFruit();
    }

    if (bonusX != -1 && x == bonusX && y == bonusY) {
        score += (scoreMultiplier ? 100 : 50);
        length += 2;
        bonusX = bonusY = -1;
        bonusTimer = 0;
    }

    if (x == powerUpX && y == powerUpY) {
        if (powerUpType == 1) speedBoost = 50;
        else if (powerUpType == 2) slowMotion = 50;
        else if (powerUpType == 3) scoreMultiplier = 50;
        powerUpX = powerUpY = -1;
        powerUpType = 0;
    }

    if (bonusTimer > 0) {
        bonusTimer--;
        if (bonusTimer == 0) bonusX = bonusY = -1;
    }

    if (speedBoost > 0) speedBoost--;
    if (slowMotion > 0) slowMotion--;
    if (scoreMultiplier > 0) scoreMultiplier--;

    spawnBonusFruit();
    spawnPowerUp();
}

void gameOverScreen() {
    clearScreen();
    printf("\n\n\t=== GAME OVER ===\n");
    printf("\tFinal Score: %d\n", score);
    printf("\tThanks for playing!\n\n");
}

int main() {
    srand(time(0));
    hideCursor();
    welcomeScreen();
    selectDifficulty();
    setup();
    placeFruit();

    while (!gameOver) {
        draw();
        input();
        logic();

        int delay = 100000;
        if (difficulty == 1) delay = 150000;
        else if (difficulty == 3) delay = 50000;

        if (speedBoost > 0) delay /= 2;
        if (slowMotion > 0) delay *= 2;

        usleep(delay);
    }

    showCursor();
    gameOverScreen();
    return 0;
}
